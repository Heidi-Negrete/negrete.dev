---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
	<div>
		<div class="text-3xl w-full font-bold mb-5">
			Deployed/Published Projects
		</div>
	</div>
	<HorizontalCard
		title="Client Website for Northeast Roofing Solutions"
		img="/northeast.png"
		desc="Customized website built over an Astro template with web form functionality and a responsive design."
		url="https://northeastroofingsolutions.com/"
		badge="NEW"
	/>

	<HorizontalCard
		title="Richard Smiley the Gladiator"
		img="/gladiator.png"
		desc="I was the solo developer for this 2D Survival Arena game, built using the Godot engine and GDScript."
		url="https://angelic-garbage.itch.io/richard-smiley-the-gladiator"
	/>

	<div class="text-3xl w-full font-bold mb-5 mt-10">
		Projects in Development
	</div>

	<HorizontalCard
		title="Just an Ice Cream Truck"
		img="/icecreamtruck.png"
		desc="Control an ice cream truck on an urgent mission, using an arduino board as an external controller. Built using Arduino Uno, Blender, and Unreal Engine 5."
		url="/project/icecreamtruck"
		badge="NEW"
	/>

	<HorizontalCard
		title="CompSci Curriculum for Ages 6-12"
		img="/post_img.webp"
		desc="The resources I have created and collected for use in educating children in Computer Literacy and Computer Science fundamentals, made freely available."
		url="https://heidi-negrete.github.io/kids-compsci-curriculum/"
	/>

	<div>
		<div class="text-3xl w-full font-bold mb-5 mt-10">Other Projects</div>
	</div>

	<HorizontalCard
		title="Spacebox"
		img="/charm2.jpeg"
		desc="My first game built in Unreal Engine. Spaceships get invaded by aliens all the time. It's your job to go in and cleanup, with the help of your drone to solve puzzles and only your fists to defend yourself."
		url="/project/spacebox"
	/>

	<div class="divider my-0"></div>

	<HorizontalCard
		title="Erpday Farm"
		img="/erpdaybunny.png"
		desc="Erpday Farm is a wacky digital card game where the animals are your friends. Built in Godot Engine."
		url="https://github.com/Heidi-Negrete/erpday-farm"
	/>

	<div class="divider my-0"></div>

	<HorizontalCard
		title="Cocoon"
		img="/cocoon.png"
		desc="An atmospheric 2D RPG where the protagonist journeys through biomes both micro and macro-scopic to realize their full potential."
		url="https://heidi-negrete.github.io/cocoon/"
	/>

	<div class="divider my-0"></div>

	<div class="divider my-0"></div>

	<p>
		You can also check-out my <a
			href="https://github.com/Heidi-Negrete"
			style="color:blue;">github</a
		>.
	</p>
